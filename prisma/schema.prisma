// Simplified Prisma schema - Direct Event to Messages relationship
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  phone     String?   @unique
  username  String
  photoStoragePath     String?
  photoThumbnailPath   String?
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  videos    Video[]
  adminEvents Event[] @relation("AdminRelation")
  eventParticipants EventParticipant[]
  
  // Direct message relation
  sentMessages Message[] @relation("MessageSender")
}

model Video {
  id            String   @id @default(uuid())
  storagePath   String  @unique
  thumbnailPath String 
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  status        String   @default("pending") // "pending" | "published"
  
  // Many-to-many relationship with events
  events        VideoEvent[]

  // Indexes for feed performance
  @@index([userId, createdAt])
  @@index([status, createdAt])
}

model Event {
  id          String   @id @default(uuid())
  name        String?
  information String?
  date        DateTime
  createdAt   DateTime @default(now())
  location    String?
  photoStoragePath     String?
  photoThumbnailPath   String?

  admin       User     @relation("AdminRelation", fields: [adminId], references: [id])
  adminId     String

  participants EventParticipant[]
  
  // Many-to-many relationship with videos
  videos      VideoEvent[]
  
  // Direct relationship with messages (no intermediate Chat model)
  messages    Message[]
}

model VideoEvent {
  id        String   @id @default(uuid())
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  videoId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  addedAt   DateTime @default(now())
  
  @@unique([videoId, eventId])
  @@index([videoId])
  @@index([eventId])
  @@index([eventId, addedAt]) // For feed queries
}

model EventParticipant {
  id        String   @id @default(uuid())
  event     Event    @relation(fields: [eventId], references: [id])
  eventId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  joinedAt  DateTime @default(now())

  @@unique([userId, eventId], name: "userId_eventId")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  
  // Direct relationship with event (no Chat model)
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  senderId  String
  sender    User     @relation("MessageSender", fields: [senderId], references: [id])
  
  // Message type (text, image, etc.) - extensible for future features
  type      String   @default("text") // "text", "image", "video"
  
  
  @@index([eventId, createdAt])
  @@index([senderId])
}

