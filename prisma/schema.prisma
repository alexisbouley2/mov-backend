generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(uuid())
  phone     String   @unique
  countryCode String   @default("+33")
  username  String
  profileImagePath     String? @unique
  profileThumbnailPath   String? @unique
  isDeleted Boolean  @default(false)
  deletedAt DateTime?

  videos    Video[]
  adminEvents Event[] @relation("AdminRelation")
  eventParticipants EventParticipant[]
  pushTokens PushToken[]
  pushNotifications PushNotification[] @relation("UserNotifications")
  
  sentMessages Message[] @relation("MessageSender")
}

model Video {
  id            String   @id @default(uuid())
  videoPath         String  @unique
  thumbnailPath     String  @unique
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id])
  userId        String
  status        String   @default("pending") // "pending" | "published"
  reported      Boolean  @default(false)
  reportedAt    DateTime?
  reportedBy    String?
  
  events        VideoEvent[]

  @@index([userId, createdAt])
  @@index([status, createdAt])
  @@index([reported, createdAt])
}

model Event {
  id          String   @id @default(uuid())
  name        String?
  information String?
  date        DateTime
  createdAt   DateTime @default(now())
  coverImagePath    String? @unique
  coverThumbnailPath String? @unique

  admin       User     @relation("AdminRelation", fields: [adminId], references: [id])
  adminId     String

  messages    Message[]
  invites     EventInvite[]
  pushNotifications PushNotification[] @relation("EventNotifications")
  
  participants EventParticipant[]
  videos      VideoEvent[]
}

model VideoEvent {
  id        String   @id @default(uuid())
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)
  videoId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  addedAt   DateTime @default(now())
  
  @@unique([videoId, eventId])
  @@index([videoId])
  @@index([eventId])
  @@index([eventId, addedAt])
}

model EventParticipant {
  id        String   @id @default(uuid())
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  eventId   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  joinedAt  DateTime @default(now())
  confirmed Boolean  @default(false)

  @@unique([userId, eventId], name: "userId_eventId")
  @@index([eventId, confirmed])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  senderId  String
  sender    User     @relation("MessageSender", fields: [senderId], references: [id])
  
  type      String   @default("text") // "text", "image", "video"
  
  @@index([eventId, createdAt])
  @@index([senderId])
}

model EventInvite {
  id        String   @id @default(uuid())
  token     String   @unique
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdBy String   // userId who created the invite
  createdAt DateTime @default(now())
  expiresAt DateTime
  
  @@index([eventId])
  @@index([token])
  @@index([expiresAt])
}

model PushToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lastUsedAt DateTime @default(now())
  isActive  Boolean  @default(true)
  
  @@unique([userId, token])
  @@index([userId, isActive])
}

model PushNotification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation("UserNotifications", fields: [userId], references: [id], onDelete: Cascade)
  eventId   String
  event     Event    @relation("EventNotifications", fields: [eventId], references: [id], onDelete: Cascade)
  type      String   // "new_message", "participant_added", etc.
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  readAt    DateTime?
  
  @@index([userId, isRead])
  @@index([eventId, userId])
  @@index([userId, eventId, isRead])
}

